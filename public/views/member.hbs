<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Employee Attendance Portal</title>
    <link rel="stylesheet" href="../statics/buttonStyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>

<body>
    {{>navbar}}
    <div class="container" style="margin-top: 2.5%;">
        <div class="card" style="width: 18rem;">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><b>Name:</b>: {{member.name}}</li>
                <li class="list-group-item"><b>Email:</b> {{member.email}}</li>
                <li class="list-group-item"><b>Attendance:</b> {{member.attendance}}</li>
                <li class="list-group-item"><b>RmEmail:</b> {{member.rmEmail}}</li>
                {{#if member.approval}}
                {{else}}
                <button class="btn btn-sm btn-primary" id="{{member.empId}}" onclick="markApproval(this.id)">
                    Mark Attendace
                </button>
                {{/if}}
            </ul>
        </div>
        {{!-- <div class="card-body" style="border: 1px; border-radius: 5%;">
            <p class="card-text"><b>Name:</b> {{member.name}}</p>
            <p class="card-text"><b>Email:</b> {{member.email}}</p>
            <p class="card-text"><b>Attendance:</b> {{member.attendance}}</p>
            <p class="card-text"><b>RmEmail:</b> {{member.rmEmail}}</p>
            {{#if member.approval}}
            {{else}}
            <button class="btn btn-sm btn-primary" id="{{member.empId}}" onclick="markApproval(this.id)">
                Mark Attendace
            </button>
            {{/if}}
        </div> --}}
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>

    <script>
        function markApproval(empId) {
            var data = {
                empId: empId
            };
            var xhttp = new XMLHttpRequest();
            xhttp.onreadystatechange = function () {
                if (this.status == 200) {
                    window.location.reload();
                }
            };
            xhttp.open("PUT", "/markApproval", true);
            xhttp.setRequestHeader('Content-type', 'application/json; charset=utf-8');
            xhttp.send(JSON.stringify(data));
        }
    </script>
</body>

</html>