<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Portal</title>
    <link rel="stylesheet" href="../statics/buttonStyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>

<body>
    {{>navbar}}
    <div class="container" style="margin-top: 2.5%;">
        <input type="file" id="fileInput" />
        <select id="helperSelect">
            <option selected value="0">Choose any one</option>
            <option value="1">Id Reader</option>
            <option value="2">Language Detector</option>
        </select>
        <button class="btn btn-sm btn-primary" onclick="callHelper()">Execute</button>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>

    <script>
        function callHelper() {
            const file = document.getElementById("fileInput").files[0];
            const helperSelectValue = document.getElementById('helperSelect').value;
            console.log(helperSelectValue);

            if (helperSelectValue == 0) {
                alert('Please make a valid selection');
                return;
            }
            else if (helperSelectValue == 1) {
                var xhttp = new XMLHttpRequest();
                xhttp.onreadystatechange = function () {
                    if (this.status == 200) {
                        console.log(JSON.parse(this.responseText));
                    }
                }
                xhttp.open('POST', 'https://prod-150.westus.logic.azure.com:443/workflows/14386bd5e8344159b48012355c4dc10f/triggers/manual/paths/invoke?api-version=2016-06-01&sp=%2Ftriggers%2Fmanual%2Frun&sv=1.0&sig=Q_8_aN_BMmndH0joojZQI8OoVf7OxKeyXgasAFLKQBM', true);
                xhttp.send(file);
            }
            else if (helperSelectValue == 2) {
                var xhttp = new XMLHttpRequest();
                xhttp.onreadystatechange = function () {
                    if (this.status == 200) {
                        console.log(JSON.parse(this.responseText));
                    }
                }
                xhttp.open('POST', 'https://prod-72.westus.logic.azure.com:443/workflows/51e4b9becaef4f2b8b3d3cfb505af22f/triggers/manual/paths/invoke?api-version=2016-06-01&sp=%2Ftriggers%2Fmanual%2Frun&sv=1.0&sig=ihN0O1ItTWQPuNc4AwW1hq1qWTuLz637MrJgZNb_mu4', true);
                xhttp.send(file);
            }
        };
    </script>
</body>

</html>